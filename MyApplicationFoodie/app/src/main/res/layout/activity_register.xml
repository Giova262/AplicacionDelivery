<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#2196F3"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#A3E926"
            android:textSize="12dp"
            android:gravity="center"
            android:text="Rellena todos los datos para poder registrarte" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_imageView"
                android:layout_width="347dp"
                android:layout_height="131dp"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:layout_marginLeft="5dp"
                app:srcCompat="@android:drawable/alert_dark_frame" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/register_subirfotoButton"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0.1"
                    android:shadowDy="0.1"
                    android:shadowRadius="5"
                    android:text="Subir foto"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/register_elegirfotoButton"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0.1"
                    android:shadowDy="0.1"
                    android:shadowRadius="5"
                    android:text="Elegir foto"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/register_nombreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:background="#FFFF"
            android:ems="10"
            android:hint="Ingrese Nombre"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#858383" />

        <EditText
            android:id="@+id/register_passEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:inputType="textPassword"
            android:hint="Ingrese ContraseÃ±a" />

        <EditText
            android:id="@+id/register_emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:hint="Ingrese Email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/register_clienteCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Cliente" />

            <CheckBox
                android:id="@+id/register_deliveryCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Delivery" />

        </LinearLayout>

        <Button
            android:id="@+id/register_registrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"  />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>