<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#2196F3"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#A3E926"
            android:textSize="12dp"
            android:gravity="center"
            android:text="Rellena todos los datos para poder registrarte" />

        <EditText
            android:id="@+id/register_nombreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:hint="Ingrese Nombre"
             />

        <EditText
            android:id="@+id/register_passEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:hint="Ingrese ContraseÃ±a" />

        <EditText
            android:id="@+id/register_emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:hint="Ingrese Email" />

        <EditText
            android:id="@+id/register_fotoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:hint="Ingrese url Foto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/register_clienteCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Cliente" />

            <CheckBox
                android:id="@+id/register_deliveryCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Delivery" />

        </LinearLayout>

        <Button
            android:id="@+id/register_registrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"  />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>