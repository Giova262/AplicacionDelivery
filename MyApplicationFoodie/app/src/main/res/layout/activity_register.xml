<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/fondomensaje"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:gravity="center"
            android:text="Completa todos los campòs!" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_imageView"
                android:layout_width="222dp"
                android:layout_height="131dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                app:srcCompat="@android:drawable/alert_dark_frame" />

            <Button
                android:id="@+id/register_elegirfotoButton"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0.1"
                android:shadowDy="0.1"
                android:shadowRadius="5"
                android:text="Elegir foto"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/register_nombreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:background="#FFFF"
            android:ems="10"
            android:hint="Ingrese Nombre"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#858383" />

        <EditText
            android:id="@+id/register_passEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:inputType="textPassword"
            android:hint="Ingrese Contraseña" />

        <EditText
            android:id="@+id/register_emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="#FFFF"
            android:textColor="#000000"
            android:textColorHint="#858383"
            android:layout_marginHorizontal="1dp"
            android:layout_marginVertical="5dp"
            android:hint="Ingrese Email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Selecciona el Rol :" />

            <Spinner
                android:id="@+id/register_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/register_registrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:text="Registrar"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="361dp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>