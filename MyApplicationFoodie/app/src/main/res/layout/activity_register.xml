<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#2196F3"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#A3E926"
            android:textSize="12dp"
            android:gravity="center"
            android:text="Rellena todos los datos para poder registrarte" />

        <EditText
            android:id="@+id/register_nombreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ingrese Nombre"
             />

        <EditText
            android:id="@+id/register_passEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese ContraseÃ±a" />

        <EditText
            android:id="@+id/register_emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Email" />

        <EditText
            android:id="@+id/register_fotoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ingrese url Foto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/register_clienteCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cliente" />

            <CheckBox
                android:id="@+id/register_deliveryCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery" />

        </LinearLayout>

        <Button
            android:id="@+id/register_registrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Registrar"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>