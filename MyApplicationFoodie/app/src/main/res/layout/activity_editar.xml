<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editar_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/fondomensaje"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:gravity="center"
            android:text="Edita tus datos"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Nombre :" />

            <EditText
                android:id="@+id/editar_nombreEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#FFFF"
                android:textColor="#000000"
                android:layout_marginHorizontal="30dp"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Email :" />

            <EditText
                android:id="@+id/editar_mailEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#FFFF"
                android:textColor="#000000"
                android:layout_marginHorizontal="30dp"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Password :" />

            <EditText
                android:id="@+id/editar_passEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#FFFF"
                android:textColor="#000000"
                android:layout_marginHorizontal="30dp"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Red Social :"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editar_redsocialEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:background="#FFFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rol :"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/editar_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editar_imageView"
                android:layout_width="358dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                app:srcCompat="@android:drawable/alert_dark_frame" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/editar_elegirbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/buttonshape"
                    android:paddingVertical="5dp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0.1"
                    android:shadowDy="0.1"
                    android:shadowRadius="5"
                    android:text="Elegir foto"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/editar_subirbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subir foto"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0.1"
                    android:shadowDy="0.1"
                    android:shadowRadius="5"
                    android:paddingVertical="5dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginVertical="5dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/editar_cambiarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="1dp" />

        <Button
            android:id="@+id/editar_volverButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>