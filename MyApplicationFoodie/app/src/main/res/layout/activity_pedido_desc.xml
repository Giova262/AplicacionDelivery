<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoDescActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pedidoDesc_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#A3E926"
            android:textSize="12dp"
            android:gravity="center"
            android:text="Datos del Pedido" />

        <TextView
            android:id="@+id/pedidoDesc_userid_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/pedidoDesc_totalprecio_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/pedidoDesc_dirOrigen_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/pedidoDesc_dirDestino_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


        <Button
            android:id="@+id/pedidoDesc_tomarpedido_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow"
            android:text="Tomar pedido" />

        <Button
            android:id="@+id/pedidoDesc_volver_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow"
            android:text="Volver" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>