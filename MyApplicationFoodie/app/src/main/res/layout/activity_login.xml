<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginCliente_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#2196F3"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#A3E926"
            android:textSize="12dp"
            android:gravity="center"
            android:text="Estas logeado como cliente" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loginCliente_ImageView"
                android:layout_width="163dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_myplaces" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loginCliente_nombreTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/loginCliente_emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/loginCliente_puntajeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/loginCliente_nivelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/loginCliente_pedirButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Pedir"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow" />

        <Button
            android:id="@+id/loginCliente_pendientesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Pendientes"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow"/>

        <Button
            android:id="@+id/loginCliente_historialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Historial"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow" />

        <Button
            android:id="@+id/loginCliente_editarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Editar Perfil"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow" />

        <Button
            android:id="@+id/loginCliente_logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Log out"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:paddingBottom="@dimen/cardview_compat_inset_shadow" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>