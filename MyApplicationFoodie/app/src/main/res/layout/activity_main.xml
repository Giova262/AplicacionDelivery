<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondoapp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/main_logoImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="30dp"
            app:srcCompat="@drawable/iconoaplicacion" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Selecciona el Rol "
                android:textColor="#0E0D0D" />

            <Spinner
                android:id="@+id/main_spinner"
                android:layout_marginHorizontal="20dp"
                android:layout_width="175dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:id="@+id/main_emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:background="#EEEAEA"
            android:hint="Ingrese su Email"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#5A5858"
            android:textColor="#0E0D0D"
            android:text="josue@gmail.com" />

        <EditText
            android:id="@+id/main_passEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:hint="Ingrese su ContraseÃ±a"
            android:textColorHint="#5A5858"
            android:background="#EEEAEA"
            android:textColor="#0E0D0D"
            android:ems="10"
            android:inputType="textPassword"
            android:text="contra" />

        <Button
            android:id="@+id/main_entrarBoton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#013A64"
            android:textColor="#E4EED5"
            android:layout_marginHorizontal="40dp"
            android:shadowColor="#A8A8A8"
            android:layout_marginTop="20dp"
            android:shadowRadius="5"
            android:shadowDx="0"
            android:shadowDy="0"

            android:text="Entrar" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="246dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/main_registrarBoton"
            android:layout_width="246dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#A8A8A8"
            android:background="#18649E"
            android:padding="2dp"
            android:text="Registrar"
            android:textColor="#EEEAEA"
            android:shadowRadius="5"
            android:textSize="18dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>