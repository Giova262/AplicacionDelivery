<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/main_mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#2196F3"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#A3E926"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Foodie" />

        <ImageView
            android:id="@+id/main_logoImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/main_clienteCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cliente" />

            <CheckBox
                android:id="@+id/main_deliveryCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery" />
        </LinearLayout>

        <EditText
            android:id="@+id/main_emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="josue@" />

        <EditText
            android:id="@+id/main_passEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPassword"
            android:text="contra" />

        <Button
            android:id="@+id/main_entrarBoton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18649E"
            android:textColor="#EEEAEA"
            android:text="Entrar" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="246dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/main_registrarBoton"
            android:layout_width="246dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:background="#18649E"
            android:padding="2dp"
            android:text="Registrar"
            android:textColor="#EEEAEA"
            android:textSize="18dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>