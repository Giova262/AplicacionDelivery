<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoOpcionesClienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pedOpcCliente_mensajetextView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/fondomensaje"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:gravity="center"
            android:text="Detalles del Pedido"  />

        <Button
            android:id="@+id/pedOpcCliente_mapabutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:text="Ver mapa"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/pedOpcCliente_chatbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir chat"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp" />

        <Button
            android:id="@+id/pedOpcCliente_entregadobutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar entrega"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>