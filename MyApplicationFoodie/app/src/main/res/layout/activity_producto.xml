<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="15dp"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/producto_direccionEditText"
                android:layout_width="388dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="#FFFF"
                android:hint="Ingrese Direccion de Destino"
                android:inputType="textPostalAddress"
                android:selectAllOnFocus="false"
                android:textColor="#000000"
                android:textColorHint="#5F5C5C" />
        </LinearLayout>

        <ListView
            android:id="@+id/producto_listview"
            android:layout_width="420dp"
            android:layout_height="216dp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:paddingHorizontal="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/producto_confirmarButton"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0.1"
                android:shadowDy="0.1"
                android:shadowRadius="5"
                android:text="Enviar"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/producto_verbolsaButton"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0.1"
                android:shadowDy="0.1"
                android:shadowRadius="5"
                android:text="Ver bolsa"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>