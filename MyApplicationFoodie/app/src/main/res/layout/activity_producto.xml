<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/fondomensaje"
            android:shadowColor="#033050"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:gravity="center"
            android:text="Lista de Productos"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/producto_direccionTextview"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="Destino :" />

            <EditText
                android:id="@+id/producto_direccionEditText"
                android:layout_width="300dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese Direccion de Destino"
                android:inputType="textPostalAddress"
                android:background="#FFFF"
                android:textColor="#000000"
                android:selectAllOnFocus="false" />
        </LinearLayout>

        <ListView
            android:id="@+id/producto_listview"
            android:layout_width="420dp"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/producto_verbolsaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver bolsa"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"  />

        <Button
            android:id="@+id/producto_confirmarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar compra"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="5"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"  />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>