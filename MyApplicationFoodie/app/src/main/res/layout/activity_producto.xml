<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#2196F3"
            android:gravity="center"
            android:shadowColor="#033050"
            android:text="Agregue productos a su bolsa!"
            android:textColor="#A3E926"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/producto_direccionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Ingrese Direccion de Destino"
            android:inputType="textPostalAddress"
            android:selectAllOnFocus="false" />

        <ListView
            android:id="@+id/producto_listview"
            android:layout_width="420dp"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/producto_verbolsaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="50dp"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Ver bolsa" />

        <Button
            android:id="@+id/producto_confirmarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:background="#18649E"
            android:textColor="#F7F4F4"
            android:textSize="24dp"
            android:text="Confirmar comra" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>